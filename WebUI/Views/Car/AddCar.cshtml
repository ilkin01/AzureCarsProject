        /* Mini alert container */
        .mini-alert {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #C70039; /* Blue background color */
            color: #fff;
            padding: 10px;
            border-radius: 5px;
            display: none;
            z-index: 9999;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        }


        /* Close (x) icon */
        .close-icon {
            cursor: pointer;
            float: right;
            font-size: 30px;
            font-weight: bold;
            margin-left: 10px; /* Add space between content and close button */
        }

        /* Alert content */
        .alert-content {
            margin-bottom: 10px; /* Add margin for space */
        }

        /* Show animation */
        .show {
            animation: fadeIn 0.5s ease-in-out;
        }

        /* Fade in animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>

